#!/bin/sh
#DdShurick 25.01.15 GPL v2 modifited for Richy and PRA
[ "$(whoami)" = root ] || sudo=sudo
if [ -f /var/log/*-livedbg ]; then
 eval $(grep -m 2 mnt /var/log/*-livedbg | grep -n mnt | sed 's/1:/IFDEV=/;s/2:/IFDIR=/')
 DISTRO_REPO="`awk -F"/iso/" '{print $1}' /etc/pra`/pfs/" ###sfs
 PDEV1=$(basename $IFDEV)
elif [ -f /etc/rc.d/PUPSTATE ]; then
 eval $(egrep 'PSUBDIR|PDEV1' /etc/rc.d/PUPSTATE)
 IFDIR=$(grep $PDEV1 /proc/mounts | awk '{print $2}')${PSUBDIR}
 eval $(grep DISTRO_REPO /etc/DISTRO_SPECS) #repository in DISTRO_SPECS
else
 exit 1
fi

if [ "$IFDIR" = "$PSUBDIR" ]; then 
 mkdir -p /mnt/$PDEV1
 $sudo mount /dev/$PDEV1 /mnt/$PDEV1
 IFDIR=/mnt/${PDEV1}${PSUBDIR}
 UMNT=1
fi

repo () {
ntf "Загрузка данных. Ждите..." &

curl $DISTRO_REPO | awk -F [\<\>] '!/Index/ {print $3 $5}' | grep ".." > /tmp/repolist

export Repo="<vbox>
	<text><label>Репозиторий модулей</label></text>
		<list>
			<variable>GET</variable>
			<input file>/tmp/repolist</input>
		</list>
	<hbox>
		<button>
			<input file stock=\"gtk-go-back\"></input>
			<label>Назад</label>
		</button>
		<button>
			<input file stock=\"gtk-go-forward\"></input>
			<label>Вперёд</label>
		</button>
		<button>
			<input file stock=\"gtk-quit\"></input>
			<label>Выйти</label>
		</button>
	</hbox>
</vbox>"
eval $(gtkdialog3 -c --program "Repo" --geometry 640x480)

[ "$EXIT" = "Выйти" -o  "$EXIT" = "abort" ] && exit

GET=$(echo $GET | cut -f1 -d' ')

	if [ "$(echo $GET | grep '/$')" ]; then
	 DISTRO_REPO=${DISTRO_REPO}${GET}
	 repo 
	fi
	if [ "$EXIT" = "Назад" ]; then
	 DISTRO_REPO=$(dirname $DISTRO_REPO)/
	 repo
	fi
}

BUTTON_A="<button><label>С автоподключенными</label></button>"
#if no "$DISTRO_REPO" - no button "Скачать"
[ "$DISTRO_REPO" ] && BUTTON_B="<button>
			<input file stock=\"gtk-network\"></input>
			<label>Скачать</label>
		</button>"
BUTTON_C="<button>
			<input file stock=\"gtk-remove\"></input>
			<label>Отключить</label>
		</button>"
menu () {
LIST=$($sudo busybox losetup | awk '!/\/0[0-9][0-9]|\-base|\-save|kernel/ {print $3}')

: > /tmp/onlist
: > /tmp/allonlist
: > /tmp/offlist

 for M in $LIST
 do
  basename $M >> /tmp/allonlist
  [ $(echo $M | egrep 'memory|initrd') ] && basename $M >> /tmp/onlist
 done
GREP=$(cat /tmp/allonlist | tr '\n' '|')
[ "$1" = "--all" ] && pref=all || pref=''

find $IFDIR/modules $IFDIR/optional -maxdepth 1 ! -type d | egrep -v "${GREP}^$" | while read M
 do
  [ "$(file $M | grep 'Squashfs filesystem, little endian, version 4')" = "" ] && continue
  basename $M >> /tmp/offlist
 done

export Menu="<window title=\"Modules_event\">
<vbox>
	<text><label>Подключениые, отключение, поиск модулей в сети.</label></text>
  <hbox>
	<vbox scrollable=\"true\" height=\"440\">
		<text><label>Подключенные модули</label></text>
		<list>
			<variable>OFF_MODULE</variable>
			<input file>/tmp/${pref}onlist</input>
		</list>
		<hbox>
		$BUTTON_A
		$BUTTON_C
		</hbox>
	</vbox>
	<vbox scrollable=\"true\" height=\"440\">
		<text><label>Неподключенные модули</label></text>
		<list>
			<variable>ON_MODULE</variable>
			<input file>/tmp/offlist</input>
		</list>
		<hbox>
		<button>
			<input file stock=\"gtk-add\"></input>
			<label>Подключить</label>
		</button>
		$BUTTON_B
		<button>
			<input file stock=\"gtk-quit\"></input>
			<label>Выйти</label>
		</button>
		</hbox>
	</vbox>
  </hbox>
</vbox></window>"
eval $(gtkdialog3 -c --program="Menu" --geometry="640x480")
[ "$EXIT" = "Выйти" -o  "$EXIT" = "abort" ] && exit

if [  "$EXIT" = "С автоподключенными" ]; then
 BUTTON_A="<button><label>Без автоподключенных</label></button>"
 BUTTON_C=''
 menu --all
fi
if [  "$EXIT" = "Без автоподключенных" ]; then
 BUTTON_A="<button><label>С автоподключенными</label></button>"
 BUTTON_C="<button>
			<input file stock=\"gtk-remove\"></input>
			<label>Отключить</label>
		</button>"
 menu
fi
if [ "$EXIT" = "Скачать" ]; then
	if [ "$(ping -c 1 ya.ru)" ]; then
	 repo
		if [ "$GET" = "" ]; then
		 ntf -e "Ничего не выбрано"
		 exit
		fi
	 $sudo wget -c ${DISTRO_REPO}${GET} -O $IFDIR/optional/${GET}
	else
	 ntf -e "Интернет недоступен"
	fi 
 menu
fi
}
menu
if [  "$EXIT" = "Подключить" ]; then
 [ "$ON_MODULE" ] && load_sfs $(find $IFDIR/ -name $ON_MODULE) || ntf -e "Ничего не выбрано"
fi
if [  "$EXIT" = "Отключить" ]; then
 [ "$OFF_MODULE" ] && unload_sfs $(echo "$LIST" | grep $OFF_MODULE) || ntf -e "Ничего не выбрано"
fi

[ "$UMNT" = 1 ] && $sudo umount /mnt/$PDEV1 && $sudo rmdir /mnt/$PDEV1
